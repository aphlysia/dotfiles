set autoindent
set expandtab
set fileformats=unix,mac,dos
set ignorecase
set smartcase
set wrapscan
set nolist
set tabstop=4
set showmatch
syntax on
set hlsearch
set laststatus=2
set showcmd
set statusline=%F%=%m%r%h%w-%{&ff}-%Y-%l,%v(%p%%)
set hid
set lazyredraw

nmap <Esc><Esc> :nohlsearch<CR><ESC>

set ambiwidth=double

nnoremap / /\v
